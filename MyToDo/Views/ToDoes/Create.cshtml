@model MyToDo.Models.ToDo
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="p-3 mb-2 bg-secondary text-white" style="width:75%;margin:auto; border-radius:3% 3%;">
    <h2>Create</h2>
    @using (Html.BeginForm("Create", "ToDoes"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Title, new { @class= "text-dark fw-bold" })
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = "text-dark fw-bold" })
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DueDate, new { @class = "text-dark fw-bold" })
            @Html.TextBoxFor(m => m.DueDate, new { @class = "form-control" })
        </div>
        <br />
        <div class="form-group">
            <button style="float:left;display:inline;" type="submit" class="btn btn-info">
                Add To List
            </button>

        </div>
       
        
    }
    <br />
    <br />

    </div>
